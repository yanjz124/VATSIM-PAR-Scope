<Window x:Class="PARScopeDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VATSIM PAR Scope Display" Height="600" Width="900">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="Exit" Click="OnExitClick" />
                </MenuItem>
                <MenuItem Header="Tools">
                    <MenuItem Header="Simulator..." Click="OnOpenSimulatorClick" />
                </MenuItem>
                <MenuItem Header="Airport/Runway">
                    <MenuItem Header="Select..." Click="OnSelectRunwayClick" />
                    <Separator />
                    <MenuItem Header="Download Latest NASR Data..." Click="OnDownloadNASRClick" />
                    <MenuItem Header="Load NASR from File..." Click="OnLoadNASRFileClick" />
                </MenuItem>
            </Menu>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
                <TextBlock Text="Plugin Status: " FontWeight="Bold"/>
                <TextBlock x:Name="StatusText" Text="Disconnected" Foreground="Red" Margin="5,0,0,0"/>
                <TextBlock Text=" | Last Event: "/>
                <TextBlock x:Name="LastEventText" Text="-"/>
                <TextBlock Text=" | Runway: "/>
                <TextBlock x:Name="RunwayText" Text="(not set)"/>
                <CheckBox x:Name="HideGroundCheckBox" Margin="20,0,0,0" VerticalAlignment="Center" Foreground="Black" IsChecked="True" Checked="OnHideGroundChanged" Unchecked="OnHideGroundChanged" Content="Show Ground Traffic"/>
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="History Dots:" Foreground="Black" Margin="0,0,5,0" FontWeight="Bold" FontSize="13"/>
                    <Slider x:Name="HistoryDotsSlider" Minimum="1" Maximum="20" Value="5" Width="110" 
                            TickFrequency="1" IsSnapToTickEnabled="True" 
                            ValueChanged="OnHistoryDotsChanged" VerticalAlignment="Center" Background="Transparent"/>
                    <TextBlock x:Name="HistoryDotsLabel" Text="5" Foreground="Black" Margin="8,0,0,0" Width="28" FontWeight="Bold" FontSize="13"/>
                </StackPanel>
                <CheckBox x:Name="ShowVerticalDevCheckBox" Margin="20,0,0,0" VerticalAlignment="Center" Foreground="Black" IsChecked="True" Checked="OnShowVerticalDevChanged" Unchecked="OnShowVerticalDevChanged" Content="Show Vertical Dev Lines"/>
                <CheckBox x:Name="ShowAzimuthDevCheckBox" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Black" IsChecked="True" Checked="OnShowAzimuthDevChanged" Unchecked="OnShowAzimuthDevChanged" Content="Show Azimuth Dev Lines"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#1a1a1a" Height="28">
                <TextBlock Text="PAR Config:" Foreground="White" Margin="8,0,15,0" VerticalAlignment="Center" FontSize="11" FontWeight="Bold"/>
                
                <!-- Glide Slope -->
                <TextBlock Text="GS:" Foreground="LightGray" Margin="0,0,3,0" VerticalAlignment="Center" FontSize="10"/>
                <Button x:Name="GlideSlopeDown" Content="◄" Width="18" Height="18" Margin="0,0,1,0" Click="OnGlideSlopeDown" FontSize="8" Padding="0"/>
                <TextBox x:Name="GlideSlopeBox" Width="35" Height="18" VerticalAlignment="Center" TextChanged="OnConfigChanged" Foreground="Black" Background="White" TextAlignment="Center" FontSize="10" Padding="0,1,0,0"/>
                <Button x:Name="GlideSlopeUp" Content="►" Width="18" Height="18" Margin="1,0,8,0" Click="OnGlideSlopeUp" FontSize="8" Padding="0"/>
                
                <!-- Decision Height -->
                <TextBlock Text="DH:" Foreground="LightGray" Margin="0,0,3,0" VerticalAlignment="Center" FontSize="10"/>
                <Button x:Name="DHDown" Content="◄" Width="18" Height="18" Margin="0,0,1,0" Click="OnDHDown" FontSize="8" Padding="0"/>
                <TextBox x:Name="DecisionHeightBox" Width="45" Height="18" VerticalAlignment="Center" TextChanged="OnConfigChanged" Foreground="Black" Background="White" TextAlignment="Center" FontSize="10" Padding="0,1,0,0"/>
                <Button x:Name="DHUp" Content="►" Width="18" Height="18" Margin="1,0,8,0" Click="OnDHUp" FontSize="8" Padding="0"/>
                
                <!-- Max Azimuth -->
                <TextBlock Text="MaxAZ:" Foreground="LightGray" Margin="0,0,3,0" VerticalAlignment="Center" FontSize="10"/>
                <Button x:Name="MaxAzDown" Content="◄" Width="18" Height="18" Margin="0,0,1,0" Click="OnMaxAzDown" FontSize="8" Padding="0"/>
                <TextBox x:Name="MaxAzBox" Width="35" Height="18" VerticalAlignment="Center" TextChanged="OnConfigChanged" Foreground="Black" Background="White" TextAlignment="Center" FontSize="10" Padding="0,1,0,0"/>
                <Button x:Name="MaxAzUp" Content="►" Width="18" Height="18" Margin="1,0,8,0" Click="OnMaxAzUp" FontSize="8" Padding="0"/>
                
                <!-- Range -->
                <TextBlock Text="Range:" Foreground="LightGray" Margin="0,0,3,0" VerticalAlignment="Center" FontSize="10"/>
                <Button x:Name="RangeDown" Content="◄" Width="18" Height="18" Margin="0,0,1,0" Click="OnRangeDown" FontSize="8" Padding="0"/>
                <TextBox x:Name="RangeBox" Width="35" Height="18" VerticalAlignment="Center" TextChanged="OnConfigChanged" Foreground="Black" Background="White" TextAlignment="Center" FontSize="10" Padding="0,1,0,0"/>
                <Button x:Name="RangeUp" Content="►" Width="18" Height="18" Margin="1,0,0,0" Click="OnRangeUp" FontSize="8" Padding="0"/>
                
                <!-- Plan altitude top filter (hundreds of feet) -->
                <TextBlock Text="Plan Alt Top (100s ft):" Foreground="LightGray" Margin="12,0,3,0" VerticalAlignment="Center" FontSize="10"/>
                <Button x:Name="PlanAltTopDown" Content="◄" Width="18" Height="18" Margin="0,0,1,0" Click="OnPlanAltTopDown" FontSize="8" Padding="0" />
                <TextBox x:Name="PlanAltTopBox" Width="40" Height="18" VerticalAlignment="Center" TextChanged="OnPlanAltTopChanged" Foreground="Black" Background="White" TextAlignment="Center" FontSize="10" Padding="0,1,0,0"/>
                <Button x:Name="PlanAltTopUp" Content="►" Width="18" Height="18" Margin="1,0,8,0" Click="OnPlanAltTopUp" FontSize="8" Padding="0" />
            </StackPanel>
            <Expander x:Name="DebugExpander" DockPanel.Dock="Top" Header="Debug Traffic Data" IsExpanded="False" Margin="10,0">
                <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="DebugText" FontFamily="Consolas" FontSize="10" Foreground="LightGray" Background="#222" Padding="5"/>
                </ScrollViewer>
            </Expander>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: stacked Vertical (top) and Azimuth (bottom) -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <Canvas x:Name="VerticalScopeCanvas" Background="#111"/>
                    </Border>

                    <!-- Splitter between Vertical and Azimuth -->
                    <GridSplitter Grid.Row="1" Height="6" HorizontalAlignment="Stretch" Background="#333"/>

                    <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <Canvas x:Name="AzimuthScopeCanvas" Background="#111"/>
                    </Border>
                </Grid>

                <!-- Vertical splitter between left and right -->
                <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" Background="#333"/>

                <!-- Right: Plan View -->
                <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <Canvas x:Name="PlanViewCanvas" Background="#111"/>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
