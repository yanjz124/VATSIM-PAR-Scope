<Window x:Class="PARScopeDisplay.RunwayDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select Runway" Height="420" Width="520" MinHeight="360" MinWidth="480" WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="ICAO:"/>
    <ComboBox x:Name="IcaoBox" Grid.Row="0" Grid.Column="1" Margin="6,2" IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="True"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Runway:"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <ComboBox x:Name="RunwayBox" Width="160" Margin="6,2" IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="True"/>
            <Button x:Name="LookupButton" Content="Lookup from NASR" Margin="6,2" Click="OnLookupClick"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Threshold Lat:"/>
        <TextBox x:Name="LatBox" Grid.Row="2" Grid.Column="1" Margin="6,2" />

        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Threshold Lon:"/>
        <TextBox x:Name="LonBox" Grid.Row="3" Grid.Column="1" Margin="6,2" />

        <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Heading (true deg):"/>
        <TextBox x:Name="HdgBox" Grid.Row="4" Grid.Column="1" Margin="6,2" />

        <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Glideslope (deg):"/>
        <TextBox x:Name="GsBox" Grid.Row="5" Grid.Column="1" Margin="6,2" />

        <TextBlock Grid.Row="6" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Threshold crossing height (ft):"/>
        <TextBox x:Name="TchBox" Grid.Row="6" Grid.Column="1" Margin="6,2" />

        <TextBlock Grid.Row="7" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Field elev (ft):"/>
        <TextBox x:Name="ElevBox" Grid.Row="7" Grid.Column="1" Margin="6,2" />

        <TextBlock Grid.Row="8" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Range (nm):"/>
        <TextBox x:Name="RangeBox" Grid.Row="8" Grid.Column="1" Margin="6,2" />

        <TextBlock Grid.Row="9" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Decision Height (ft):"/>
        <TextBox x:Name="DHBox" Grid.Row="9" Grid.Column="1" Margin="6,2" />

        <TextBlock Grid.Row="10" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Max Azimuth (deg):"/>
        <TextBox x:Name="MaxAzBox" Grid.Row="10" Grid.Column="1" Margin="6,2" />

        <TextBlock Grid.Row="11" Grid.Column="0" Margin="0,2" VerticalAlignment="Center" Text="Sensor offset (nm):"/>
        <TextBox x:Name="SensorOffsetBox" Grid.Row="11" Grid.Column="1" Margin="6,2" />

        <StackPanel Grid.Row="12" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Width="80" Margin="6,0" Content="OK" IsDefault="True" Click="OnOk"/>
            <Button Width="80" Margin="6,0" Content="Cancel" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>